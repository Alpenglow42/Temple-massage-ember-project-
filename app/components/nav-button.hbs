

<div class="py-1">
  {{#if @route}}
    <LinkTo @route={{@route}}>
      <button class="bg-pink-700 hover:bg-blue-700 text-red font-bold py-2 px-4 rounded {{this.activeClass}}">
        {{yield}}
      </button>
    </LinkTo>
  {{else}}
    <button class="btn btn-pink {{this.activeClass}}">
      {{yield}}
    </button>
  {{/if}}
</div>



